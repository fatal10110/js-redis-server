{
  "name": "js-redis-server",
  "version": "0.0.1",
  "description": "In-memory Redis-compatible server implementation in JavaScript, useful for testing and client-agnostic mocks",
  "keywords": [
    "redis",
    "resp",
    "server",
    "mock",
    "testing",
    "ioredis",
    "node-redis",
    "in-memory",
    "cluster"
  ],
  "license": "MIT",
  "author": "fatal10110",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fatal10110/js-redis-server.git"
  },
  "bugs": {
    "url": "https://github.com/fatal10110/js-redis-server/issues"
  },
  "homepage": "https://github.com/fatal10110/js-redis-server#readme",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "js-redis-server": "dist/cli.mjs"
  },
  "sideEffects": false,
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "rm -rf ./dist && rollup -c && chmod +x dist/cli.mjs",
    "start": "npm run build && node --enable-source-maps ./dist/cli.mjs",
    "test": "tsc --noEmit && glob -c \"node --enable-source-maps --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\"",
    "test:integration:mock": "tsc --noEmit && TEST_BACKEND=mock glob -c \"node --enable-source-maps --import tsx --no-warnings --test\" \"./tests-integration/**/*.test.ts\"",
    "test:integration:real": "tsc --noEmit && npm run clean:redis && TEST_BACKEND=real glob -c \"node --enable-source-maps --import tsx --no-warnings --test-concurrency 1 --test\" \"./tests-integration/**/*.test.ts\"",
    "test:all": "npm run test && npm run test:integration:mock && npm run test:integration:real",
    "clean:redis": "redis-cli --cluster call 127.0.0.1:30000 FLUSHALL || redis-cli FLUSHALL || echo 'Redis cleanup attempted'",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "husky"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "cluster-key-slot": "^1.1.2",
    "ioredis-mock": "^8.9.0",
    "lua-redis-wasm": "^1.2.2",
    "respjs": "^4.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.0",
    "husky": "^9.1.5",
    "ioredis": "^5.4.1",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "redis": "^5.1.1",
    "rollup": "^4.55.1",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
